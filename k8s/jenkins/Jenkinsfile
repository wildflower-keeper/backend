pipeline {
    agent {
        kubernetes {
            yamlFile 'k8s/jenkins/kanikoPod.yaml'
            podRetention(always())
        }
    }

    environment {
        NAMESPACE = "kisacloud2407"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Checking out the repository"
                    checkout scm
                }
            }
        }

        stage('Build Docker Image with Kaniko') {
            steps {
                echo "Building Docker Image with Kaniko"
                container('kaniko') {
                    script {
                        sh """
                        /kaniko/executor \
                            --context /workspace \
                            --dockerfile /workspace/k8s/was/Dockerfile \
                            --destination docker.io/jeongseulho/wildflower-gardening:latest \
                            --verbosity=debug
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes"
                sh """
                kubectl apply -f k8s/deployment.yaml -n ${NAMESPACE}
                """
            }
        }
    }
}
