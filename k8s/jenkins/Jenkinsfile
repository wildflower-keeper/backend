pipeline {
    agent any

    environment {
        NAMESPACE = "default" // Kubernetes 네임스페이스
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Checking out the repository"
                    checkout scm
                }
            }
        }
    }

    post {
        always {
            script {
                echo "Pipeline execution completed"
            }
        }
    }
}
